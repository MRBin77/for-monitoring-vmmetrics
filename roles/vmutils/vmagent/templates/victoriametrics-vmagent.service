[Unit]
Description=victoriametrics-vmagent
After=network.target

[Service]
RuntimeDirectory=vmagent
Type=simple
PrivateTmp=true
User={{ vmagent_user }}
PIDFile=/run/vmagent/vmagent.pid
ExecStart={{ binary_path }}/vmagent-prod -promscrape.config.strictParse=false -promscrape.config={{ config_path }}/{{ config_name }} -remoteWrite.url={{ remoteWriteUrl }}
ExecStop=/bin/kill -s SIGTERM $MAINPID
StartLimitBurst=5
StartLimitInterval=0
Restart=on-failure
RestartSec=1

[Install]
WantedBy=multi-user.target