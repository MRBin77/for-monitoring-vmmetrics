[Unit]
Description=victoriametrics-vmselect
After=network.target

[Service]
RuntimeDirectory=vmselect
Type=simple
PrivateTmp=true
User={{ vmetrics_user }}
PIDFile=/run/vmselect/vmselect.pid
ExecStart={{ binary_path }}/vmselect-prod -search.maxUniqueTimeseries=1000000000 -search.maxQueryDuration=120s -dedup.minScrapeInterval=1ms -cacheDataPath={{ binary_path }}/victoria-cache -memory.allowedPercent=60 -replicationFactor=3 -storageNode={{ storageNodes_read }} -selectNode={{ selectNode }}
ExecStop=/bin/kill -s SIGTERM $MAINPID
StartLimitBurst=5
StartLimitInterval=0
Restart=on-failure
RestartSec=1
NowNewPriviliges=yes

[Install]
WantedBy=multi-user.target